  }
  
  /* Create a custom radio button */
  input[type="radio"]::before {
    content: "";
    display: inline-block;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    border: 2px solid #03d3b9;
    margin-right: 5px;
    
  }
  
  /* Customize the circle color when selected */
  input[type="radio"]:checked::before {
    background-color: #03d3b9; 
    box-shadow: 0 0 10px #03d3b9;
  }